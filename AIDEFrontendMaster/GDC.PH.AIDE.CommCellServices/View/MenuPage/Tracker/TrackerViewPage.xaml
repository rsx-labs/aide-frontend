    <Border Background="white" BorderBrush="Gainsboro" BorderThickness="1" CornerRadius="15">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                
                <RowDefinition Height="9*"/>
                <RowDefinition Height=".5*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>

                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <Viewbox HorizontalAlignment="Left">
                        <TextBlock x:Name="courseTitle" TextWrapping="Wrap" Padding="0" Text="Tracker" Margin="7,7,0,7" Foreground="DimGray"/>
                    </Viewbox>

                </Grid>
                <Grid Grid.Column="1">
                    
                </Grid>
                <Grid Grid.Column="2">
                    <Viewbox Margin="10" HorizontalAlignment="Right">
                        <Button x:Name="btnCCancel" Click="btnCCancel_Click" Style="{DynamicResource ButtonBack}" >

                        </Button>
                    </Viewbox>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Background="{DynamicResource GradientDesign}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1.8*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="5">
                        <lvc:PieChart x:Name="Chart" Series="{Binding SeriesCollection}" 
                       InnerRadius="40" Margin="3" LegendLocation="Right">

                            <lvc:PieChart.ChartLegend>
                                <lvc:DefaultLegend BulletSize="15" FontSize="12"></lvc:DefaultLegend>
                            </lvc:PieChart.ChartLegend>
                            <lvc:PieChart.DataTooltip>
                                <lvc:DefaultTooltip BulletSize="15" ></lvc:DefaultTooltip>
                            </lvc:PieChart.DataTooltip>

                        </lvc:PieChart>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.2*"/>
                            <RowDefinition Height="1.2*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border Margin="5,10,10,0" Background="white" BorderBrush="Gainsboro" BorderThickness="3" CornerRadius="15">

                                <DatePicker BorderThickness="0" Style="{DynamicResource styleDatePickerfrom}" x:Name="dtDate"  Text="{Binding SabaLearningVMModel.DATE_COMPLETED, Mode=TwoWay, StringFormat=dd-mm-yyyy}" 
                                Margin="2" FontSize="12" BorderBrush="Transparent"/>
                            </Border>
                            <TextBlock Background="Transparent" IsHitTestVisible="False" Text="Select end date" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,10,0,0" Foreground="DarkGray">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=dtDate}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock x:Name="txtlabelEndDate" Width="120" TextAlignment="Center" Margin="10" Text="Date Completed" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=dtDate}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="1" Margin="5,10,10,0">
                            <Button Style="{DynamicResource RoundCornerUpdate}" Name="UpdateCourseBtn" Click="UpdateCourseBtn_Click">
                                
                                    <TextBlock Text="SET COMPLETION DATE" TextWrapping="Wrap" Margin="5"/>
                                
                            </Button>
                        </Grid>
                        <Grid Grid.Row="2" Margin="5,10,10,0">
                            <Button Visibility="Hidden" Style="{DynamicResource RoundCornerEdit}" Name="UpdateEndDateBtn" Click="UpdateEndDateBtn_Click">
                                <Viewbox>
                                    <TextBlock Text="EDIT COURSE" TextWrapping="Wrap" Margin="5"/>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>

                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="10,0,5,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.3*"/>
                            <RowDefinition Height="9*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border Background="White" BorderBrush="Transparent" BorderThickness="1" CornerRadius="15,15,0,0">

                                <Viewbox>
                                    <TextBlock Foreground="DimGray" Margin="5" Text="Completed the course"  FontSize="13" FontFamily="Segoe UI" TextWrapping="WrapWithOverflow" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Viewbox>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Border Background="white" BorderBrush="Transparent" BorderThickness="0" CornerRadius="0,0,15,15">


                                <ListBox AlternationCount="2" ItemContainerStyle="{DynamicResource Style1}" BorderBrush="Transparent" Background="Transparent" x:Name="lstEmpCompleted" ItemsSource="{Binding ObjectCompletedSabaLearningSet}" SelectedValue="{Binding Path=IMAGE_PATH}" 
                                       DisplayMemberPath="IMAGE_PATH" SelectedValuePath="IMAGE_PATH" >
                                </ListBox>

                            </Border>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1" Margin="5,0,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.3*"/>
                            <RowDefinition Height="9*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" >
                            <Border Background="White" BorderBrush="Transparent" BorderThickness="1" CornerRadius="15,15,0,0">

                                <Viewbox>
                                    <TextBlock Foreground="DimGray" Margin="5" Text="Not yet completed the course"  FontSize="13" FontFamily="Segoe UI" TextWrapping="WrapWithOverflow" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Viewbox>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1" >
                            <Border Background="white" BorderBrush="Transparent" BorderThickness="0" CornerRadius="0,0,15,15">
                                <ListBox AlternationCount="2" ItemContainerStyle="{DynamicResource Style1}" BorderBrush="Transparent" Background="Transparent" x:Name="lstEmpNotCompleted" ItemsSource="{Binding ObjectCompletedSabaLearningSet}" SelectedValue="{Binding Path=IMAGE_PATH}" 
                                       DisplayMemberPath="IMAGE_PATH" SelectedValuePath="IMAGE_PATH" >
                                </ListBox>
                            </Border>
                        </Grid>
                    </Grid>



                </Grid>


            </Grid>
        </Grid>
    </Border>
</Page>
