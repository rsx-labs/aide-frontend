<Page x:Class="WeeklyReportUpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Height="Auto" Width="Auto"
      Title="WeeklyReportUpdatePage">

    <Border Background="white" BorderBrush="Gainsboro" BorderThickness="1" CornerRadius="8">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="1.1*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.82*"/>
                    <ColumnDefinition Width="0.18*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Viewbox HorizontalAlignment="Left">
                        <TextBlock Text="Update Weekly Report" Margin="5" Foreground="DimGray"/>
                    </Viewbox>
                </Grid>

                <Grid Grid.Column="1">
                    <Viewbox Margin="10" HorizontalAlignment="Right">
                        <Button Name="btnBack" Click="btnBack_Click" Style="{DynamicResource ButtonBack}" >
                            <Viewbox>
                                <TextBlock Text="Back"  Foreground="White" Margin="10"/>
                            </Viewbox>
                        </Button>
                    </Viewbox>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Background="{DynamicResource GradientDesign}" Width="Auto">
                <!--<DataGrid x:Name="dgWeeklyReport" 
                          IsReadOnly="True" 
                          Background="White"
                          AutoGenerateColumns="False" 
                          HorizontalScrollBarVisibility="Auto" >
                    <DataGrid.Columns>
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Project" Width="75" Binding="{Binding ProjectDesc}"/>
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Project ID" Width="75" Binding="{Binding ProjectID}" Visibility="Hidden" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Rework" Width="60" Binding="{Binding ReworkDesc}"  />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="ReworkID" Width="60" Binding="{Binding Rework}" Visibility="Hidden"/>
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Reference ID" Width="100" Binding="{Binding RefID}"  />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Description" Width="250" Binding="{Binding Subject}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Severity" Width="100" Binding="{Binding SeverityDesc}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Severity ID" Width="100" Binding="{Binding Severity}" Visibility="Hidden" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Category" Width="100" Binding="{Binding IncidentDesc}"  />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Category ID" Width="100" Binding="{Binding IncidentType}" Visibility="Hidden" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Phase" Width="100" Binding="{Binding PhaseDesc}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Phase ID" Width="100" Binding="{Binding Phase}" Visibility="Hidden" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Status" Width="100" Binding="{Binding StatusDesc}"/>
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Status ID" Width="100" Binding="{Binding Status}"  Visibility="Hidden" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Start Date" Width="100" Binding="{Binding DateStarted, StringFormat='MM/dd/yyyy'}"/>
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Target Date" Width="100" Binding="{Binding DateTarget, StringFormat='MM/dd/yyyy'}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Completed Date" Width="100" Binding="{Binding DateFinished, StringFormat='MM/dd/yyyy'}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Date Created" Width="100" Binding="{Binding DateCreated, StringFormat='MM/dd/yyyy'}" Visibility="Hidden" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Effort Estimate (in Hrs)" Width="110" Binding="{Binding EffortEst}"/>
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Actual Effort for the Week (in Hrs)" Width="120" Binding="{Binding ActualEffortWk}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Actual Effort (in Hrs)" Width="100" Binding="{Binding ActualEffort}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Comments" Width="250" Binding="{Binding Comments}" />
                        <DataGridTextColumn ElementStyle="{StaticResource ColumnElementStyle}" Header="Inbound Contacts" Width="90" Binding="{Binding InboundContacts}" />
                    </DataGrid.Columns>
                </DataGrid>-->
                <ListView Background="White" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" x:Name="dgWeeklyReport" ItemsSource="{Binding ObjectAnnouncementSet}" Height="auto" Width="auto" BorderBrush="{x:Null}" SelectionMode="Single" Foreground="#FF07B9B1" TextOptions.TextFormattingMode="Display" AllowDrop="True" BorderThickness="0" Focusable="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5,5,5,0" Background="White" BorderThickness="10,1,1,1">

                                <!--<Border.Effect>
                                    <DropShadowEffect  Direction="0" Opacity="0.9" ShadowDepth="1" Color="LightGray"/>
                                </Border.Effect>-->
                                <StackPanel VerticalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="10*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <Viewbox HorizontalAlignment="Left" Margin="5,5,0,5" >
                                                <Image Source="{Binding IncidentImagePath}" />
                                            </Viewbox>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2*"/>
                                                <RowDefinition Height="1.5*"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0" Margin="10,10,10,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0">
                                                    <StackPanel>
                                                        <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Subject}" FontSize="14" FontWeight="SemiBold" Foreground="DimGray"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding PhaseDesc}" FontSize="12" Foreground="DimGray"/>
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text=" (" FontSize="12" Foreground="DimGray"/>
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding StatusDesc}" FontSize="12" Foreground="DimGray" FontStyle="Italic"/>
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text=")" FontSize="12" Foreground="DimGray"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text="Start date : " FontSize="12" Foreground="DimGray"/>
                                                            <Grid>
                                                                <TextBlock TextWrapping="WrapWithOverflow" x:Name="DateStarted1" Text="{Binding DateStarted}" FontSize="12" Foreground="DimGray"/>

                                                                <TextBlock x:Name="txtDateStarted1" IsHitTestVisible="False" Text="??/??/????" FontSize="12" Foreground="DimGray">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="{x:Type TextBlock}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Text, ElementName=DateStarted1}" Value="">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Grid>
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text="          " FontSize="12" Foreground="DimGray"/>
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text="Target date : " FontSize="12" Foreground="DimGray"/>
                                                            <Grid>
                                                                <TextBlock TextWrapping="WrapWithOverflow" x:Name="DateTarget1" Text="{Binding DateTarget}" FontSize="12" Foreground="DimGray"/>

                                                                <TextBlock x:Name="txtTargetDate1" IsHitTestVisible="False" Text="??/??/????" FontSize="12" Foreground="DimGray">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="{x:Type TextBlock}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Text, ElementName=DateTarget1}" Value="">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Grid>
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text="          " FontSize="12" Foreground="DimGray"/>
                                                            <TextBlock TextWrapping="WrapWithOverflow" Text="Completed date : " FontSize="12" Foreground="DimGray"/>
                                                            <Grid>
                                                                <TextBlock TextWrapping="WrapWithOverflow" x:Name="FinishedTarget1" Text="{Binding DateFinished}" FontSize="12" Foreground="DimGray"/>

                                                                <TextBlock x:Name="txtFinishedDate1" IsHitTestVisible="False" Text="??/??/????" FontSize="12" Foreground="DimGray">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="{x:Type TextBlock}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Text, ElementName=FinishedTarget1}" Value="">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Grid>


                                                        </StackPanel>

                                                    </StackPanel>

                                                </Grid>

                                                <Grid Grid.Column="1">
                                                    <StackPanel>
                                                        <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" Text="{Binding ActualEffortWk}" TextAlignment="Center" VerticalAlignment="Center" Foreground="DimGray" FontWeight="Bold" />
                                                        <TextBlock TextWrapping="WrapWithOverflow" FontSize="9" Text="Actual Effort for the Week (in Hrs)" TextAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontWeight="ExtraLight" FontStyle="Italic" IsEnabled="False" />
                                                    </StackPanel>

                                                    <TextBlock x:Name="txtIncident" Visibility="Hidden" TextWrapping="WrapWithOverflow" FontSize="11" Text="{Binding IncidentType}" TextAlignment="Right" VerticalAlignment="Center" Foreground="DimGray" FontStyle="Italic" />
                                                </Grid>
                                            </Grid>


                                        </Grid>


                                    </Grid>
                                </StackPanel>

                                <Border.Style>
                                    <Style>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=txtIncident, Path=Text}" Value="1">
                                                <Setter Property="Border.BorderBrush" Value="#FF8DF48D" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=txtIncident, Path=Text}" Value="2">
                                                <Setter Property="Border.BorderBrush" Value="#FFFF0000" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=txtIncident, Path=Text}" Value="3">
                                                <Setter Property="Border.BorderBrush" Value="#FFEEEE74" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>


                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>

            <Grid Grid.Row="2" >
                <Grid>
                    <Border Margin="0" Background="Gainsboro" CornerRadius="15,15,0,0">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <ComboBox Style="{DynamicResource StyleComboBox}" 
                                      x:Name="cbProject" Margin="0,0,2.5,2.5"
                                      ItemsSource="{Binding ProjectList}" 
                                      DisplayMemberPath="ProjectName" 
                                      SelectedValuePath="ProjectID"/>
                                    <TextBlock IsHitTestVisible="False" Text="Select a project *" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbProject}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelProject" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Project" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbProject}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <ComboBox 
                                  ItemsSource="{Binding Path=ReworkStatusList}" 
                                  DisplayMemberPath="Value" 
                                  SelectedValuePath="Key"
                                  Margin="0,2.5,2.5,2.5" Style="{DynamicResource StyleComboBox}"
                                  x:Name="cbRework"/>
                                    <TextBlock FontSize="12" IsHitTestVisible="False" Text="Is this a rework?" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbRework}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelRework" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Rework?" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbRework}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Border Margin="0,2.5,2.5,2.5" Background="White" BorderBrush="Gainsboro" BorderThickness="3" CornerRadius="8">
                                        <TextBox  x:Name="txtRefID" 
                                         Template="{DynamicResource TextBoxBaseControlTemplate}"/>
                                    </Border>
                                    <TextBlock FontSize="12" IsHitTestVisible="False" Text="Enter a reference ID" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtRefID}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelRefID" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Reference ID" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtRefID}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid Grid.Row="3">
                                    <Border Margin="0,2.5,2.5,2.5" Background="White" BorderBrush="Gainsboro" BorderThickness="3" CornerRadius="8">
                                        <TextBox Template="{DynamicResource TextBoxBaseControlTemplate}"
                                         x:Name="txtSubject" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
                                    </Border>
                                    <TextBlock FontSize="12" IsHitTestVisible="False" Text="Enter description *" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtSubject}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelSubject" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Description" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtSubject}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid Grid.Row="4">
                                    <ComboBox 
                                  ItemsSource="{Binding Path=SeverityStatusList}" 
                                  DisplayMemberPath="Value" 
                                  SelectedValuePath="Key"
                                  Margin="0,2.5,2.5,0" Style="{DynamicResource StyleComboBox}"
                                  x:Name="cbSeverity"/>
                                    <TextBlock FontSize="12" IsHitTestVisible="False" Text="Select severity" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbSeverity}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelSeverity" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Severity" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbSeverity}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <ComboBox 
                                  ItemsSource="{Binding Path=CategoryStatusList}" 
                                  DisplayMemberPath="Value" 
                                  SelectedValuePath="Key"
                                  Margin="2.5,0,2.5,2.5" Style="{DynamicResource StyleComboBox}"
                                  x:Name="cbIncidentType"/>
                                    <TextBlock x:Name="txtIncidentType" FontSize="12" IsHitTestVisible="False" Text="Select a category" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbIncidentType}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelCategory" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Category" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=cbIncidentType}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Border Margin="2.5,2.5,2.5,2.5" Background="white" BorderBrush="Gainsboro" BorderThickness="3" CornerRadius="8">
                                        <DatePicker Loaded="DatePicker_Loaded"
                                            Name="dpStartDate" IsEnabled="True"
                                            Style="{DynamicResource styleDatePickerfrom}"/>
                                    </Border>
                                    <TextBlock x:Name="txtStartDate" Background="Transparent" IsHitTestVisible="False" Text="Select start date" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=dpStartDate}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelSDate" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Start Date" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=dpStartDate}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Border Margin="2.5,2.5,2.5,2.5" Background="White" BorderBrush="Gainsboro" BorderThickness="3" CornerRadius="8">
                                        <DatePicker Loaded="DatePicker_Loaded" 
                                            x:Name="dpTargetDate" 
                                            Style="{DynamicResource styleDatePickerfrom}"/>
                                    </Border>
                                    <TextBlock x:Name="txtTargetDate" Background="Transparent" IsHitTestVisible="False" Text="Select target date" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=dpTargetDate}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="txtlabelTDate" Width="120" TextAlignment="Center" Margin="5,0,5,0" Text="Target Date" Padding="5,0,5,0" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="9">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=dpTargetDate}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid Grid.Row="3">
                                    <Border Margin="2.5,2.5,2.5,2.5" Background="White" BorderBrush="Gainsboro" BorderThickness="3" CornerRadius="8">
                                        <DatePicker Loaded="DatePicker_Loaded" 
                                            Name="dpCompletedDate" 
                                            Style="{DynamicResource styleDatePickerfrom}"/>
                                    </Border>
                                    <TextBlock x:Name="txtDateCompleted" Background="Transparent" IsHitTestVisible="False" Text="Select completed date" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0" Foreground="DarkGray">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
